<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ericmedeiros.week5_intnet.MainActivity" >

    <TextView
        android:id="@+id/txtSecondActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the second activity" />

    <CheckBox
        android:id="@+id/chkisOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="is on?" />
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="returnOk"
            android:text="Return Ok" />

        <Button
            android:id="@+id/btnThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="returnCancel"
            android:text="Return Cancel" />
    </LinearLayout>

</LinearLayout>
package com.NaN.nutracker;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

import org.apache.http.HttpResponse;
import org.apache.http.HttpStatus;
import org.apache.http.client.HttpClient;
import org.apache.http.client.methods.HttpGet;
import org.apache.http.impl.client.DefaultHttpClient;

import android.app.Activity;
import android.app.ProgressDialog;
import android.content.Context;
import android.os.AsyncTask;

import com.google.gson.JsonArray;
import com.google.gson.JsonElement;
import com.google.gson.JsonObject;
import com.google.gson.JsonParser;

public class GetRoutes extends AsyncTask<String, Void, Boolean> {
	String routeId = "";
	String result = "fail";
	private ProgressDialog dialog;
	private Activity activity;
	private Context context;

	public GetRoutes(Activity activity) {
		this.activity = activity;
		context = activity;
		dialog = new ProgressDialog(context);
	}

	@Override
	protected Boolean doInBackground(String... params) {
		// TODO Auto-generated method stub
		this.routeId = params[0];

		//return getRoutes();
		return GetSomething();
	}

	final Boolean GetSomething() {
		String url = "http://142.55.49.127/WebAPI/api/Route/"+routeId;
		BufferedReader inStream = null;
		boolean result = false;
		try {
			HttpClient httpClient = new DefaultHttpClient();
			HttpGet httpRequest = new HttpGet(url);
			HttpResponse response = httpClient.execute(httpRequest);
			if(response.getStatusLine().getStatusCode() == HttpStatus.SC_OK){
				result = true;
			}
			
			
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			if (inStream != null) {
				try {
					inStream.close();
				} catch (IOException e) {
					e.printStackTrace();
				}
			}
		}
		
			
		dialog.dismiss();	
		return (result);

	}

	protected void onPostExecute(String result) {
		// t.setText(result);
	}

	@Override
	protected void onPreExecute() {
		// TODO Auto-generated method stub
		this.dialog.setMessage("Getting route information!");
		this.dialog.show();

	}

}

package com.NaN.nutracker;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.Menu;
import android.view.MenuItem;
import android.widget.TextView;

public class StopDetails extends Activity {
TextView tvStopId, tvAddress, tvCity, tvStoreName;
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_stop_details);
		tvStopId = (TextView) findViewById(R.id.stopId);
		tvAddress = (TextView) findViewById(R.id.storeAddress);
		tvCity = (TextView) findViewById(R.id.storeCity);
		tvStoreName = (TextView) findViewById(R.id.storeName);
		
		Intent intent = getIntent();
		Stop sentStop = getIntent().getSerializableExtra("stop");
		
		//tvStopId.setText("Stop ID: " +intent.getStringExtra("stopId"));
		tvStopId.setText("Stop ID: " +intent.getStringExtra("stop"));
		tvAddress.setText("Store Address: " + intent.getStringExtra("address"));
		tvCity.setText("City: " + intent.getStringExtra("city"));
		tvStoreName.setText("Store: " + intent.getStringExtra("storeName"));
		
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.stop_details, menu);
		return true;
	}

	@Override
	public boolean onOptionsItemSelected(MenuItem item) {
		// Handle action bar item clicks here. The action bar will
		// automatically handle clicks on the Home/Up button, so long
		// as you specify a parent activity in AndroidManifest.xml.
		int id = item.getItemId();
		if (id == R.id.action_settings) {
			return true;
		}
		return super.onOptionsItemSelected(item);
	}
}
